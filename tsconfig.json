// Typescript configuration file for compiling JavaScript code with types.
//
// For an options reference, visit https://www.typescriptlang.org/tsconfig.

{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./src/frontend/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": [
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.ts",
    "src/frontend/**/*.tsx",
    "src/frontend/**/*.vue"
  ]
}
